<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@+id/movie_info_fragment">

    <activity
        android:id="@+id/main_activity"
        android:name="com.avelycure.moviefan.presentation.MainActivity"
        android:label="auth_user_office_activity"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/popular_movies_fragment"
        android:name="com.avelycure.moviefan.presentation.popular_movie.PopularMoviesFragment"
        android:label="popular_movies_fragment"
        tools:layout="@layout/fragement_popular_movies">
        <action
            android:id="@+id/action_popular_movies_fragment_to_movie_info_fragment"
            app:destination="@id/movie_info_fragment" />
    </fragment>

    <fragment
        android:id="@+id/movie_info_fragment"
        android:name="com.avelycure.moviefan.presentation.movie_info.YTFragment"
        android:label="popular_movies_fragment"
        tools:layout="@layout/fragment_movie_info">
    </fragment>

</navigation>