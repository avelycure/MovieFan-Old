<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for subtitles in MovieInfoFragment -->
    <style name="MovieInfoTextSubtitle" parent="android:Theme">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColor">?attr/subtitleTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for movie info in MovieInfoFragment -->
    <style name="MovieInfoText" parent="android:Theme">
        <item name="android:textColor">@color/light_purpure2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>
</resources>