<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    android:theme="@style/Theme.MovieFan"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pi_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorOnSurface"
        android:padding="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pi_primary_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/person_item_iv"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pi_primary_info_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/person_item_iv"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/pi_primary_info_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.35" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pi_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="sans-serif-black"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="?attr/titleTextColor"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pi_tv_tv_title"
                    style="@style/MovieInfoTextSubtitle"
                    android:layout_marginStart="8dp"
                    android:text="Tv shows: "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pi_tv_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pi_tv_tv"
                    style="@style/MovieInfoText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pi_primary_info_guideline"
                    app:layout_constraintTop_toTopOf="@+id/pi_tv_tv_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pi_tv_movie_title"
                    style="@style/MovieInfoTextSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Movie: "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pi_tv_tv" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pi_tv_movie"
                    style="@style/MovieInfoText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pi_primary_info_guideline"
                    app:layout_constraintTop_toTopOf="@+id/pi_tv_movie_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pi_tv_department_title"
                    style="@style/MovieInfoTextSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Department: "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pi_tv_movie" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pi_tv_department"
                    style="@style/MovieInfoText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pi_primary_info_guideline"
                    app:layout_constraintTop_toTopOf="@+id/pi_tv_department_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pi_expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pi_primary_info">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pi_photos_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="Photos"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="?attr/titleTextColor"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/person_item_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pi_photos_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pi_more_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="More info"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="?attr/titleTextColor"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/person_item_rv" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pi_secondary_info_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_birthday_title"
                style="@style/MovieInfoTextSubtitle"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="Birthday: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pi_more_info_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_birthday"
                style="@style/MovieInfoText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pi_secondary_info_guideline"
                app:layout_constraintTop_toTopOf="@+id/person_birthday_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_deathday_title"
                style="@style/MovieInfoTextSubtitle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Deathday: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/person_birthday" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_deathday"
                style="@style/MovieInfoText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pi_secondary_info_guideline"
                app:layout_constraintTop_toTopOf="@+id/person_deathday_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_place_of_birth_title"
                style="@style/MovieInfoTextSubtitle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Place of birth: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/person_deathday" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_place_of_birth"
                style="@style/MovieInfoText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pi_secondary_info_guideline"
                app:layout_constraintTop_toTopOf="@+id/person_place_of_birth_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_item_also_known_as_title"
                style="@style/MovieInfoTextSubtitle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Also known as: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/person_place_of_birth" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_item_also_known_as"
                style="@style/MovieInfoText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pi_secondary_info_guideline"
                app:layout_constraintTop_toTopOf="@+id/person_item_also_known_as_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_homepage_title"
                style="@style/MovieInfoTextSubtitle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Homepage: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/person_item_also_known_as" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/person_homepage"
                style="@style/MovieInfoText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pi_secondary_info_guideline"
                app:layout_constraintTop_toTopOf="@+id/person_homepage_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pi_biography_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:text="Biography"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textColor="?attr/titleTextColor"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/person_homepage" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pi_biography"
                style="@style/MovieInfoText"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pi_biography_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>